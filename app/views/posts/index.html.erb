<div class="container pt-5">

    <%= link_to "New Post", new_post_path, class:"btn btn-primary" %>
    <% if @posts.length > 0 %>
    <table class="table">
        <thead>
            <tr>
                <%if current_user %>
                <th scope="col">Author</th>
                <%end %>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
            <tr>
                <% if current_user%>
                <td><%= post.user.name %></td>
                <% end %>
                <td><%= post.title %></td>
                <td><%= post.content %></td>
            </tr>
            <%end %>
        </tbody>
    </table>
    <%else %>
    <h1>No post available here. You can create one <%= link_to "here", new_post_path %></h1>
    <%end %>
</div>